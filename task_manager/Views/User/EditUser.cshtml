@{
    ViewBag.Title = "Title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <div class="d-flex justify-content-center">
        @model task_manager.Models.User
        <div>
            <div class="d-flex justify-content-between">
                <h4 class="font-weight-bold">User @Model.UserId</h4>
                <a href="/User/Index" class="btn btn-success">Back</a>
            </div>
            <form action="/User/EditUser" method="post">
                @Html.HiddenFor(u => u.UserId)
                <div class="form-group">
                    <label for="username">Username</label>
                    @Html.EditorFor(u => u.Username, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(u => u.Username)
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    @Html.EditorFor(u => u.Password, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "password" } })
                    @Html.ValidationMessageFor(u => u.Password)
                </div>
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    @Html.EditorFor(u => u.FirstName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    @Html.EditorFor(u => u.LastName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    @Html.EditorFor(u => u.Email, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "email" } })
                    @Html.ValidationMessageFor(u => u.Email)
                </div>
                <button type="submit" class="btn btn-warning">Edit</button>
            </form>
        </div>
    </div>
</div>
