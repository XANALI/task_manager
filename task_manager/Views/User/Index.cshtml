@{
    ViewBag.Title = "Title";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h4 class="font-weight-bold">Users</h4>
        <a href="/User/AddUser" class="btn btn-success">Add</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in ViewBag.Users)
            {
                <tr>
                    <th scope="row">@u.UserId</th>
                    <td>@u.Username</td>
                    <td>@u.Password</td>
                    <td>@u.FirstName</td>
                    <td>@u.LastName</td>
                    <td>@u.Email</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="actions">
                            <a href="/User/ShowUser/@u.UserId" class="btn btn-info">Show</a>
                            <a href="/User/EditUser/@u.UserId" class="btn btn-warning">Edit</a>
                            <form class="d-inline-block" action="/User/PostDeleteUser" method="post">
                                <input type="hidden" name="id" value="@u.UserId" />
                                <button type="submit" class="btn btn-danger rounded-right" style="border-radius: 0;">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>