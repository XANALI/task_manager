@{
    ViewBag.Title = "Title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    @model IEnumerable<task_manager.Models.TaskStatus>
    <div class="d-flex justify-content-between">
        <h4 class="font-weight-bold">TaskStatuses</h4>
        <a href="/TaskStatus/AddTaskStatus" class="btn btn-success">Add</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Status Name</th>
                <th scope="col">Status Color</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <th scope="row">@t.StatusId</th>
                    <td>@t.StatusName</td>
                    <td>@t.StatusColor</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="actions">
                            <a href="/TaskStatus/ShowTaskStatus/@t.StatusId" class="btn btn-info">Show</a>
                            <a href="/TaskStatus/EditTaskStatus/@t.StatusId" class="btn btn-warning">Edit</a>
                            <form class="d-inline-block" action="/TaskStatus/PostDeleteTaskStatus" method="post">
                                <input type="hidden" name="id" value="@t.StatusId" />
                                <button type="submit" class="btn btn-danger rounded-right" style="border-radius: 0;">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>