
@{
    ViewBag.Title = "Index";
}

<div class="mt-3">
    <h3>@User.Identity.Name</h3>

    <div>
        <div class="my-3 text-left">
            <a href="/Client/AddTaskBoard" class="btn btn-success">Add Task Board</a>
        </div>
        @Ajax.ActionLink("My Boards", "MyBoards", new AjaxOptions { UpdateTargetId = "boards", LoadingElementId = "loading", LoadingElementDuration = 100 })
        @Ajax.ActionLink("Member Boards", "MemberBoards", new AjaxOptions { UpdateTargetId = "boards", LoadingElementId = "loading", LoadingElementDuration = 100 })
        <div id="loading" class="spinner-border text-secondary" style="display: none;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div id="boards">
        </div>
    </div>

</div>

    