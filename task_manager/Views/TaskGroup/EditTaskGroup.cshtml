@model task_manager.Models.TaskGroup
@{
    ViewBag.Title = "Title";
}
<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <div>
            <div class="d-flex justify-content-between">
                <h4 class="font-weight-bold">TaskGroup</h4>
                <a href="/TaskGroup/Index" class="btn btn-success">Back</a>
            </div>
            <form action="/TaskGroup/PostEditTaskGroup" method="post">
                @Html.HiddenFor(model => model.GroupId)
                <div class="form-group">
                    <label for="GroupName">GroupName</label>
                    @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @id = "GroupName", @class = "form-control", @required = "required" } })
                </div>
                <div class="form-group">
                    <label for="GroupDescription">GroupDescription</label>
                    @Html.EditorFor(model => model.GroupDescription, new { htmlAttributes = new { @id = "GroupDescription", @class = "form-control", @required = "required" } })
                </div>
                <div class="form-group">
                    <label for="BoardBoardId">Task Board</label>
                    @Html.DropDownListFor(model => model.BoardBoardId, ViewBag.TaskBoards as SelectList, new { @id = "BoardBoardId", @class = "form-control", @required = "required" })
                </div>
                <button type="submit" class="btn btn-warning">Edit</button>
            </form>
        </div>
    </div>
</div>