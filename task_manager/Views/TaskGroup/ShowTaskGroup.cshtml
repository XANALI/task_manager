@{
    ViewBag.Title = "Title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <div class="d-flex justify-content-center">
        @model task_manager.Models.TaskGroup
        <div>
            <div class="d-flex justify-content-between">
                <h4 class="font-weight-bold">TaskGroup @Model.GroupId</h4>
                <a href="/TaskGroup/Index" class="btn btn-success">Back</a>
            </div>
            <div class="jumbotron">
                <h1 class="display-4">@Model.GroupName</h1>
                <hr class="my-4">
                <p>@Model.GroupDescription</p>
                <p>Board Name and Owner: @Model.Board.BoardName @Model.Board.Owner.Username</p>
            </div>
        </div>
    </div>
</div>