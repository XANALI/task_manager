@using task_manager.Models
@{
    ViewBag.Title = "Title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <div class="d-flex justify-content-center">
        @model task_manager.Models.TaskBoard
        <div>
            <div class="d-flex justify-content-between">
                <h4 class="font-weight-bold">TaskBoard @Model.BoardId</h4>
                <a href="/TaskBoard/Index" class="btn btn-success">Back</a>
            </div>
            <div class="jumbotron">
                <h1 class="display-4">@Model.BoardName</h1>
                <hr class="my-4">
                <p>@Model.BoardDescription</p>
                <p>Owner: @Model.Owner.FirstName @Model.Owner.LastName</p>
                <ul class="list-group">
                    <li class="list-group-item active">Members</li>
                    @foreach (User m in @Model.Members)
                    {
                        <li class="list-group-item">@m.Username</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>